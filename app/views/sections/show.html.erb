<% content_for :brand do %>
  <h3><%= @survey.name %></h3>
<% end %>
<% content_for :steps do %>
  <% if @current_section > 1 %>
    <span class="glyphicon glyphicon-chevron-left pull-left go-back"></span>
    <%= link_to(survey_section_path(@survey,@previous_section)) do %>
      <p>Step</p>
      <p><%= "#{@current_section} of #{@total_sections}" %></p>
    <% end %>
  <% else %>
    <p>Step</p>
    <p><%= "#{@current_section} of #{@total_sections}" %></p>
  <% end %>
<% end %>
<div class="container">
  <% @section.questions.each do |q| %>
  <div class="row question">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h4 style="font-weight: normal;text-align: center;"><%= q.text %></h4>
      <div class="row">
        <% first = true %>
        <% if q.type.name == 'satisfaction-100' %>
          <% q.answers.each do |a| %>
          <div class="answer col-xs-2<%= ' col-xs-offset-1' if first%>">
            <p><%= a.value %></p>
          </div>
          <% first= false %>
          <% end %>
        <% elsif q.type.name == 'free-text' %>
          <div class="answer col-xs-12">
            <textarea class="form-control"></textarea>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row next-step">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% if !@next_section.nil? %>
        <%= link_to("NEXT", survey_section_path(@survey, @next_section),class: 'btn btn-primary btn-lg btn-block') %>
      <% else %>
        <%= link_to("FINISH", "/", class: 'btn btn-primary btn-lg btn-block') %>
    <% end %>
    </div>
  </div>
</div>