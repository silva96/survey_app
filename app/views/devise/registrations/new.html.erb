<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signup"}) do |f| %>
        <h2 class="form-sign-heading">Please sign up</h2>
        <%= f.input :email ,label: 'Email address', label_html: {class: 'sr-only'}, placeholder: 'Email adress', autofocus: true, required: true %>
        <% hint='Password (' + @minimum_password_length.to_s + ' characters minimum)' if @validatable %>
        <%= f.input :password ,label: 'Password', label_html: {class: 'sr-only'}, placeholder: hint ||= 'Password', required: true %>
        <%= f.input :password_confirmation ,label: 'Confirm password', label_html: {class: 'sr-only'}, placeholder: 'Confirm password', required: true%>

        <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
        <%# render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
