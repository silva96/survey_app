<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
        <h2 class="form-sign-heading"><%= t 'login' %></h2>
        <%= f.input :email ,label: 'Email address', label_html: {class: 'sr-only'}, placeholder: 'Email adress', autofocus: true%>
        <%= f.input :password ,label: 'Password', label_html: {class: 'sr-only'}, placeholder: 'Password'%>
        <% if devise_mapping.rememberable? -%>
          <%= f.input :remember_me ,label: 'Remember me', as: :boolean %>
        <% end %>
        <%= f.button :submit, "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <%# render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
